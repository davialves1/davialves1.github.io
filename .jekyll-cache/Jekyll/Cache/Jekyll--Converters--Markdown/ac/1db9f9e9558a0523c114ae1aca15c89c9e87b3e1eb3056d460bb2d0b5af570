        <span class="nx">expect</span><span class="p">(</span><span class="nx">tableHeaders</span><span class="p">.</span><span class="nx">childAt</span><span class="p">(</span><span class="mi">2</span><span class="p">).</span><span class="nx">text</span><span class="p">()).</span><span class="nx">equal</span><span class="p">(</span><span class="dl">'</span><span class="s1">Reason</span><span class="dl">'</span><span class="p">);</span>
