        <span class="kd">const</span> <span class="nx">tableHeaders</span> <span class="o">=</span> <span class="nx">wrapper</span><span class="p">.</span><span class="nx">find</span><span class="p">(</span><span class="dl">'</span><span class="s1">thead tr</span><span class="dl">'</span><span class="p">);</span>

